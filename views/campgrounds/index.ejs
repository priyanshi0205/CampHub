
    <% layout('/layouts/boiler') %>
    <h2>All Campgrounds</h2>
    <!-- <div id="cluster-map" style="height: 600px;"></div> -->

        <% for(let camp of campgrounds){ %>
          <div class="card mb-3">
            <div class="row">
                
                <div class="col-md-4">
                    
                    <% if (camp.images.length > 0 && camp.images[0].url) { %>
                        <img src="<%= camp.images[0].url %>" alt="<%= camp.title %>" class="img-fluid">
                      <% } else { %>
                        <img src="https://via.placeholder.com/400x300?text=No+Image" alt="No image available" class="img-fluid">
                      <% } %>
                      
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=camp.title%></h5>
                        <p class="card-text"><%=camp.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=camp.location%></small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary ">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
          </div>
        <% } %>
   
        <script>
          const campgrounds = <%- JSON.stringify(campgrounds) %>;
          
      </script>
